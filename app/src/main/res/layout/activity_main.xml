<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white">
    <RelativeLayout
        android:id="@+id/relativeLayoutKeyboard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="25dp"
        android:orientation="vertical">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/qrscan_background"
            android:background="@android:color/transparent"
            android:onClick="toggleRelativeLayoutVisibility"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="ESCANER"
            android:textSize="24dp"
            android:textAlignment="center"
            android:textColor="@color/colorSecundario"
            android:fontFamily="@font/font_tittle"/>

    </LinearLayout>


    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_above="@id/textViewMessage"
        android:layout_centerHorizontal="true"
        app:layout_constraintWidth_max="200dp"
        app:layout_constraintHeight_max="200dp" />

    <TextView
        android:id="@+id/textViewMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Código de acceso:"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:layout_above="@id/indicatorContainer"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"/>

    <LinearLayout
        android:id="@+id/indicatorContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/textViewForgotPassword"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp">

    <ImageView
        android:id="@+id/dot1"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/circle_empty" />

    <ImageView
        android:id="@+id/dot2"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/circle_empty" />

    <ImageView
        android:id="@+id/dot3"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/circle_empty" />

    <ImageView
        android:id="@+id/dot4"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/circle_empty" />

    <ImageView
        android:id="@+id/dot5"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/circle_empty" />

    <ImageView
        android:id="@+id/dot6"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/circle_empty" />

    <ImageView
        android:id="@+id/dot7"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/circle_empty" />

    <ImageView
        android:id="@+id/dot8"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/circle_empty" />

    <ImageView
        android:id="@+id/dot9"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/circle_empty" />

</LinearLayout>

    <TextView
        android:id="@+id/textViewForgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="¿No recuerdas tu código?"
        android:textColor="@android:color/darker_gray"
        android:textSize="15dp"/>


        <GridLayout
            android:id="@+id/keyboardGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:columnCount="3"
            android:rowCount="4">

            <Button
                android:id="@+id/btn3"
                android:layout_width="4dp"
                android:layout_height="75dp"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:background="@drawable/grid_buttons_background"
                android:onClick="onDigitButtonClick"
                android:text="3"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn4"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:background="@drawable/grid_buttons_background"
                android:onClick="onDigitButtonClick"
                android:text="4"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:background="@drawable/grid_buttons_background"
                android:onClick="onDigitButtonClick"
                android:text="5"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:background="@drawable/grid_buttons_background"
                android:onClick="onDigitButtonClick"
                android:text="6"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn7"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:background="@drawable/grid_buttons_background"
                android:onClick="onDigitButtonClick"
                android:text="7"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:background="@drawable/grid_buttons_background"
                android:onClick="onDigitButtonClick"
                android:text="8"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_row="2"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:background="@drawable/grid_buttons_background"
                android:onClick="onDigitButtonClick"
                android:text="9"
                android:textColor="@color/black"
                android:textSize="30sp" />


            <Button
                android:id="@+id/btn2"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:background="@drawable/grid_buttons_background"
                android:onClick="onDigitButtonClick"
                android:text="2"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn0"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_row="3"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:background="@drawable/grid_buttons_background"
                android:onClick="onDigitButtonClick"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <ImageButton
                android:id="@+id/btnClear"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_row="3"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:adjustViewBounds="true"
                android:background="@drawable/grid_buttons_background"
                android:onClick="onClearButtonClick"
                android:paddingVertical="16dp"
                android:scaleType="fitCenter"
                android:src="@drawable/bin"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/btn"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:background="@drawable/grid_buttons_background"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn1"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:background="@drawable/grid_buttons_background"
                android:onClick="onDigitButtonClick"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="30sp" />

        </GridLayout>
    </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relativeLayoutQR"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="40dp"
                android:layout_marginRight="25dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/keyboard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/keyboard_background"
                    android:background="@android:color/transparent"
                    android:onClick="toggleRelativeLayoutVisibility"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TECLADO"
                    android:textSize="24dp"
                    android:textAlignment="center"
                    android:fontFamily="@font/font_tittle"
                    android:textColor="@color/colorSecundario"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/logo2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_above="@id/textViewMessage2"
                android:layout_centerHorizontal="true"
                app:layout_constraintWidth_max="200dp"
                app:layout_constraintHeight_max="200dp" />

            <TextView
                android:id="@+id/textViewMessage2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pulsa para escanear tu QR"
                android:textColor="@android:color/black"
                android:textSize="30sp"
                android:layout_marginBottom="65dp"
                android:layout_marginTop="16dp"
                android:layout_above="@id/space"
                android:layout_centerHorizontal="true"/>
            <Space
                android:id="@+id/space"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"/>

            <ImageButton
                android:id="@+id/scanner"
                android:layout_width="297dp"
                android:layout_height="484dp"
                android:layout_marginTop="-100dp"
                android:background="@android:color/transparent"
                android:src="@drawable/qrscanbig_background"
                android:layout_below="@id/textViewMessage2"
                android:layout_centerHorizontal="true"
                app:layout_constraintHeight_max="200dp"
                app:layout_constraintWidth_max="200dp" />

        </RelativeLayout>
</RelativeLayout>


