<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Explicación -->
    <TextView
        android:id="@+id/textViewExplanation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notificará la pérdida de su contraseña y se procederá a restablecer la misma, eliminando la actual y generando una nueva. Asegúrese de recordarla y seguir las instrucciones de su supervisor."
        android:textSize="16sp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-100dp"
        android:layout_marginHorizontal="50dp"/>

    <!-- Pregunta -->
    <TextView
        android:id="@+id/textViewQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Está seguro de notificar la pérdida de su contraseña?"
        android:textSize="18sp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:layout_below="@id/textViewExplanation"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />

    <Button
        android:id="@+id/buttonYes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewQuestion"
        android:layout_alignParentStart="true"
        android:layout_marginStart="400dp"
        android:layout_marginTop="30dp"
        android:background="@color/red"
        android:text="Sí"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:onClick="onYesClicked"/>

    <Button
        android:id="@+id/buttonNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewQuestion"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="400dp"
        android:background="@color/black"
        android:text="No"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:onClick="onNoClicked"/>

</RelativeLayout>


