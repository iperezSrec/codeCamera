<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Fondo blanco para asegurar que el color se aplique correctamente -->
    <item android:drawable="@android:color/white" />

    <!-- Imagen original de parada -->
    <item android:drawable="@drawable/parada" />

    <!-- MÃ¡scara de color para aplicar tinte -->
    <item>
        <bitmap android:src="@drawable/parada"
            android:tint="@color/colorPrimario"
            android:gravity="fill"/>
    </item>

    <!-- Borde de color primario -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="5dp"
                android:color="@color/colorPrimario" />
        </shape>
    </item>

    <!-- Efecto de fondo seleccionable -->
    <item android:drawable="?android:attr/selectableItemBackground" />

</layer-list>
